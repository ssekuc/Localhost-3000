<!--Simple container for the home page content-->
<nav class="navbar navbar-expand-lg navbar-dark text-uppercase">
    <!--Bootstrap sets the header content to resizze when the page grows or shrinks-->
    <div class="container-fluid">
        <img src="/images/LandingPage_TournamentBracketImage.png" class="img-fluid" alt="Tournament Bracket Image">
    </div>
  </nav>


<form method="POST" id="loginForm" novalidate></form>
    <div class="container text-center text-uppercase">
        <br>
        <br>
        <!--Bootstrap nav and tabs, from: https://getbootstrap.com/docs/5.0/components/navs-tabs/-->
        <nav>
            <div class="nav nav-tabs nav-justified" id="nav-tab" role="tablist">
                <button class="nav-link active" id="nav-active-tournament-tab" data-bs-toggle="tab" data-bs-target="#nav-active-tournament" type="button" role="tab" aria-controls="nav-active-tournament" aria-selected="false">Active Tournaments</button>
                <button class="nav-link" id="nav-past-tournament-tab" data-bs-toggle="tab" data-bs-target="#nav-past-tournament" type="button" role="tab" aria-controls="nav-past-tournament" aria-selected="false">Past Tournaments</button>
                <% if(user != undefined) { %>
                    <button class="nav-link" id="nav-new-tournament-tab" data-bs-toggle="tab" data-bs-target="#nav-new-tournament" type="button" role="tab" aria-controls="nav-new-tournament" aria-selected="true">New Tournament</button>
                <% } %>
            </div>
        </nav>
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane show active" id="nav-active-tournament" role="tabpanel" aria-labelledby="nav-active-tournament-tab"><br><h1>Active Tournaments</h1><br><img src="/images/LandingPage_ActiveTournament.png" class="img-fluid rounded mx-auto d-block" alt="Active Tournament Image">
                <br>
                <!--buttons area-->                          
                <div>
                    <a href="/active"><button id="activeTournamentButton" type="button" class="btn btn-primary btn-lg"><i></i>See Active Tournaments</button></a>
                </div>
                <br>
            </div>
            <div class="tab-pane fade" id="nav-past-tournament" role="tabpanel" aria-labelledby="nav-past-tournament-tab"><br><h1>Past Tournaments</h1><br><img src="/images/LandingPage_PastTournament.png" class="img-fluid rounded mx-auto d-block" alt="Past Tournament Image">
                <br>
                <!--buttons area-->                          
                <div>
                    <a href="/past"><button id="pastTournamentButton" type="button" class="btn btn-primary btn-lg"><i></i>See Past Tournaments</button></a>
                </div>
                <br>
            </div>
            <% if(user != undefined) { %>
                <div class="tab-pane fade" id="nav-new-tournament" role="tabpanel" aria-labelledby="nav-new-tournament-tab"><br><h1>Create Tournament</h1><br><img src="/images/LandingPage_NewTournament.png" class="img-fluid rounded mx-auto d-block" alt="New Tournament Image">
                    <br>
                    <!--buttons area-->                          
                    <div>
                        <a href="/add"><button id="newTournamentButton" type="button" class="btn btn-primary btn-lg"><i></i>Create New Tournament</button></a>
                    </div>
                    <br>
                </div>
            <% } %>
        </div>
        <br>
        <br>
        <br>
        <br>
    </div>    
</form>