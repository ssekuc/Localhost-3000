<form method="POST" id="loginForm" novalidate>
    <div class="container text-center text-uppercase">
        <div class="row">
            <div class="offset-md-4 col-md-4 col-sm-12">
                <br>
                <br>
                <h1>--------<br>Login<br>--------</h1>
                <div class="form-group mb-3">
                    <div class="input-group">
                        <input type="text" class="form-control" id="username" name="username"  required
                        value="" placeholder="Enter your username">
                    </div>
                </div>
                <div class="form-group mb-4">
                    <div class="input-group">
                        <input type="password" class="form-control" id="password" name="password"  required
                        value="" placeholder="Enter your password">
                    </div>
                </div>
                <div>
                    <button id="loginButton" type="submit" class="btn btn-primary btn-lg">Login</button>
                    <button id="cancelButton" type="reset" class="btn btn-warning btn-lg">Cancel</button>
                </div>
            </div>                      
        </div>
    </div>      
</form>